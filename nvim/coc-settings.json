{
  "coc.preferences.bracketEnterImprove": true,
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.filetypes": {
    "python": "pyright",
    "c/c++": "cpplint",
    "cmake": "cmake-lint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": "black",
    "cmake": "cmake-format"
  },
  "diagnostic-languageserver.formatters": {
    "cmake-format": {
      "command": "cmake-format",
      "args": ["%tempfile"],
      "doesWriteToFile": false
    }
  },
  "diagnostic-languageserver.linters": {
    "cmake-lint": {
      "command": "cmake-lint",
      "args": ["%file"]
    }
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "settings": {
        "languageServerHaskell": {
          "plugin": {
            "stan": {
              "globalOn": false
            }
          }
        }
      }
    },

    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },

    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "trace.server": "off",
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
      "settings": {
        "addSpagoSources": true,
        "addNpmPath": true
      }
    }
  },

  "codeLens.enable": true,

  "html.enable": true,
  "html.filetypes": ["html", "handlebars", "htmldjango", "blade", "django"],
  "html.format.enable": false,
  "python.linting.mypyEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "prettier.tabWidth": 4,
  "svelte.enable-ts-plugin": true,
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd",
  "suggest.completionItemKindLabels": {
    "function": "\uf794",
    "method": "\uf6a6",
    "variable": "\uf71b",
    "constant": "\uf8ff",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\ufa52",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf668",
    "color": "\ue22b",
    "property": "\ufab6",
    "field": "\uf93d",
    "unit": "\uf475",
    "file": "\uf471",
    "value": "\uf8a3",
    "event": "\ufacd",
    "folder": "\uf115",
    "keyword": "\uf893",
    "snippet": "\uf64d",
    "operator": "\uf915",
    "reference": "\uf87a",
    "typeParameter": "\uf278",
    "default": "\uf29c"
  }
}
